<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp12"
    android:layout_marginRight="@dimen/dp12">

    <ImageView
        android:id="@+id/yuan_shi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp12" />

    <ImageView
        android:id="@+id/zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yuan_shi"
        android:layout_marginTop="@dimen/dp12" />

    <RelativeLayout
        android:layout_below="@id/zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/myyiwang_show_user_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="163284@qq.com"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/myyiwang_show_baogang_flag"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="1dp"
            android:src="@drawable/ic_baogang_user_flag"
            />

    </RelativeLayout>

</RelativeLayout>